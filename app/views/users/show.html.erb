<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="well well-sm">
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <%= image_tag "http://placehold.it/380x500",
              alt: @user.profile.avatar, class: "img-rounded img-responsive" %>
          </div>
          <div class="col-sm-6 col-md-8">
            <h4>
              <%= @user.profile.name %>
            </h4>
            <small><%= @user.profile.address %>
              <i class="glyphicon glyphicon-map-marker"></i>
            </small>
            <p>
              <%= t "age" %> <i class="glyphicon glyphicon-hourglass"></i>
              <%= @user.profile.age %>
              <br/>
              <%= t "email" %> <i class="glyphicon glyphicon-envelope"></i>
              <%= @user.email %>
              <br/>
              <%= t "phone_number" %> <i class="glyphicon glyphicon-phone"></i>
              <%= @user.profile.phone_number %>
              <br/>
              <%= t "job" %> <i class="glyphicon glyphicon-asterisk">
              <%= @user.profile.job %></i>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="reviews">
        <h2><%= t "users.show.average" %></h2>
        <div class="average-review-rating" data-score=<%= @average_review %>></div>
        <span class="number-of-reviews"><%= t "users.show.base" %> <%= @reviews.count %>
          <%= t "users.show.reviews" %></span>
        <h1><%= t "users.show.reviews" %></h1>
        <% if @reviews.any? %>
          <%= render @reviews %>
        <% end %>
        <div>
          <% if user_signed_in? %>
            <%= link_to t("users.show.add"), new_user_review_path(@user), class: "btn-custom2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
