<% provide :title, t("pages.home.beauty") %>
<div id="event" class="bg-1">
  <div class="container">
    <h3 class="text-center"><%= t "pages.home.event" %></h3>
    <p class="text-center"><%= t "pages.home.let" %><br>
      <%= t "pages.home.remember" %></p>
    <ul class="list-group">
      <li class="list-group-item"><%= t "pages.home.may" %>
        <span class="label label-danger">
          <%= t "pages.home.full" %>
        </span></li>
      <li class="list-group-item"><%= t "pages.home.june" %>
        <span class="label label-danger">
          <%= t "pages.home.full" %>
        </span></li>
      <li class="list-group-item"><%= t "pages.home.july" %>
        <span class="badge">3</span></li>
    </ul>
    <div class="row text-center">
      <div class="col-sm-4">
        <div class="thumbnail">
          <%= link_to image_tag("6.jpg", alt: "Beauty", width: "400",
            height: "300") %>
          <p><strong><%= t "pages.home.skin" %></strong></p>
          <p><%= t "pages.home.date_15" %></p>
          <button class="btn" data-toggle="modal" data-target="#myModal">
            <%= t "pages.home.registry" %></button>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="thumbnail">
          <%= link_to image_tag("6.jpg", alt: "Beauty", width: "400",
            height: "300") %>
          <p><strong><%= t "pages.home.challenge" %></strong></p>
          <p><%= t "pages.home.date_22" %></p>
          <button class="btn" data-toggle="modal" data-target="#myModal">
            <%= t "pages.home.registry" %></button>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="thumbnail">
          <%= link_to image_tag("6.jpg", alt: "Beauty", width: "400",
            height: "300") %>
          <p><strong><%= t "pages.home.month" %></strong></p>
          <p><%= t "pages.home.date_15" %></p>
          <button class="btn" data-toggle="modal" data-target="#myModal">
            <%= t "pages.home.registry" %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">Ã—</button>
          <h4><span class="glyphicon glyphicon-lock"></span>
            <%= t "pages.home.seat" %></h4>
        </div>
        <div class="modal-body">
          <form role="form">
            <div class="form-group">
              <label for="psw"><span class="glyphicon glyphicon-shopping-cart">
              </span> <%= t "pages.home.people" %></label>
              <input type="number" class="form-control" id="psw" placeholder="How many?">
            </div>
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span>
                <%= t "pages.home.send" %></label>
              <input type="text" class="form-control" id="usrname" placeholder="Enter email">
            </div>
              <button type="submit" class="btn btn-block">
                <span class="glyphicon glyphicon-ok"></span>
                  <%= t "pages.home.registry" %>
              </button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-remove"></span>
              <%= t "pages.home.cancel" %>
          </button>
          <p><%= t "pages.home.need" %>
            <%= link_to t("pages.home.help") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
