<%= form_for [user, review] do |f| %>
  <div id="rating-form">
    <label><%= t "reviews.form.rating" %></label>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :reviewed_id, value: user.id %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="actions">
      <%= f.submit yield(:button_text), class: "btn form-control" %>
    </div>
  </div>
<% end %>
